<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/primary_text"/> <!-- Màu nền khi nhấn vào -->
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/primary"/> <!-- Màu nền khi mục được chọn -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/primary"/> <!-- Màu nền mặc định -->
        </shape>
    </item>
</selector>
